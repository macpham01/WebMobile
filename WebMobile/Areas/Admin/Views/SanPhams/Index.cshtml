@model IEnumerable<WebMobile.Models.SanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LoaiSanPham.TenLoaiSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhaSanXuat.TenNhaSanXuat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CauHinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongDaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LuotView)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TinhTrang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GhiChu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhaSanXuat.TenNhaSanXuat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CauHinh)
        </td>
        <td>
            <img src="~/Public/images/@item.Image" alt="@item.Image" width="100"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongDaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LuotView)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TinhTrang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GhiChu)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaSanPham }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaSanPham }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.MaSanPham })
        </td>
    </tr>
}

</table>
