@model IEnumerable<WebMobile.Models.GioHang>
@{
    ViewBag.Title = "Index";
}

<div id="page-content" class="single-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="cart.html">Cart</a></li>
                </ul>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="product well" style="margin: 0 15px;">
                    <div class="col-md-3">
                        <div class="image">
                            @{Html.RenderAction("getImage", "Partial", new { masp=item.MaSanPham });}
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="caption">
                            <div class="name"><h3><a href="/Products/Details?masp=@item.MaSanPham">@item.TenSanPham</a></h3></div>
                            <div class="price">$@item.Gia</div>
                            @using (Html.BeginForm("Update", "Cart", FormMethod.Post))
                            {
                                <input type="hidden" name="masp" value="@item.MaSanPham" />
                                <label>Số lượng: </label><input name="soluong" class="form-inline quantity" style="width:80px;" type="number" min="1" max="1000" value="@item.SoLuong">
                                <input type="submit" name="update" value="UPDATE" />
                            }
                            <div class="price">Thành tiền: $@item.TongTien</div>
                            <hr>
                            <a href="#" class="btn btn-default pull-right">REMOVE</a>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
         }

        <div class="row">
            <div class="col-md-4 col-md-offset-8 ">
                <center><a href="/Products/Index" class="btn btn-1">Continue To Shopping</a></center>
            </div>
        </div>
        <div class="row">
            <div class="pricedetails">
                <div class="col-md-4 col-md-offset-8">
                    <table>
                        <tr>
                            <th>Price Details</th>
                        </tr>
                        <tr>
                            <td>Total</td>
                            <td>$@ViewBag.sum</td>
                        </tr>
                        <tr>
                            <td>Discount</td>
                            <td>-----</td>
                        </tr>
                        <tr style="border-top: 1px solid #333">
                            <td><h5>TOTAL</h5></td>
                            <td>$@ViewBag.sum</td>
                        </tr>
                    </table>
                    <center><a href="#" class="btn btn-1">Checkout</a></center>
                </div>
            </div>
        </div>
    </div>
</div>

