@model WebMobile.Models.SanPham

@{
    ViewBag.Title = "Detail Product";
}

<div class="row">
    <div class="col-lg-12">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Index")">Products</a></li>
            <li>@ViewBag.nameProduct</li>
        </ul>
    </div>
</div>
<div class="row">
    <div id="main-content" class="col-md-8">
        <div class="product">
            <div class="col-md-6">
                <div class="image">
                    <img src="~/Public/images/@Model.Image" />
                    <div class="image-more">
                        <ul class="row">
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                <a href="#"><img class="img-responsive" src="~/Public/images/galaxy-note.jpg"></a>
                            </li>
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                <a href="#"><img class="img-responsive" src="~/Public/images/galaxy-note-2.jpg"></a>
                            </li>
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                <a href="#"><img class="img-responsive" src="~/Public/images/galaxy-note-3.jpg"></a>
                            </li>
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                <a href="#"><img class="img-responsive" src="~/Public/images/galaxy-note-4.jpg"></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="caption">
                    <div class="name"><h3 style="font-size:28px;">@Model.TenSanPham</h3></div>
                    <div class="price">$@Model.Gia</div>
                    <div class="name">Lượt xem: @Model.LuotView</div>
                    <div class="rating">
                        @for (int i = 0; i < 4; i++)
                        {
                            <span class="glyphicon glyphicon-star">
                            </span>
                        }
                        <span class="glyphicon glyphicon-star-empty">
                        </span>
                    </div>

                    <div class="info">
                        @Html.Raw(@Model.CauHinh)
                    </div>


                    <div class="well">
                        @using (Html.BeginForm("Add", "Cart"))
                        {
                            <input type="hidden" name="MaSanPham" value="@Model.MaSanPham" />
                            <input type="hidden" name="TenSanPham" value="@Model.TenSanPham" />
                            <input type="hidden" name="Gia" value=@Model.Gia />
                            <label>Số lượng: </label> <input name="SoLuong" class="form-inline quantity" style="width:80px;" type="number" min="1" max="1000" value="1">
                            <input type="hidden" name="image" value="@Model.Image" />
                            <input type="submit" name="submit" value="ADD" />
                        }
                    </div>
                    <div class="share well">
                        <strong style="margin-right: 13px;">Share :</strong>
                        <a href="#" class="share-btn" target="_blank">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="share-btn" target="_blank">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="share-btn" target="_blank">
                            <i class="fa fa-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="product-desc">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#description">Description</a></li>
                <li><a href="#review">Review</a></li>
            </ul>
            <div class="tab-content">
                <div id="description" class="tab-pane fade in active">
                    @Html.Raw(@Model.CauHinh)
                </div>
                <div id="review" class="tab-pane fade">
                    <div class="review-text">
                        <p>Please write your review about this product</p>
                    </div>
                    <div class="review-form">
                        <h4>Write a review</h4>
                        <form name="form1" id="ff" method="post" action="review.php">
                            <label>
                                <span>Enter your name:</span>
                                <input type="text" name="name" id="name" required>
                            </label>
                            <label>
                                <span>Your message here:</span>
                                <textarea name="message" id="message"></textarea>
                            </label>
                            <div class="text-right">
                                <input class="btn btn-default" type="reset" name="reset" value="Reset">
                                <input class="btn btn-default" type="submit" name="Submit" value="Submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

    @*SIDEBAR USE PARTIAL VIEW*@
    @{Html.RenderAction("Sidebar", "Partial");}
    <div class="row">
        <div class="col-lg-12">
            <div class="product-related">
                <div class="heading"><h2  style="margin: 0px 10px;">RELATED PRODUCTS</h2></div>
                <div class="products">
                    @*SPECIAL PRODUCT PARTIAL VIEW*@
                    @{Html.RenderAction("SpecialProduct", "Partial", new { NumberOfProducts = 4 });}
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>
<script>
	$(document).ready(function(){
		$(".nav-tabs a").click(function(){
			$(this).tab('show');
		});
		$('.nav-tabs a').on('shown.bs.tab', function(event){
			var x = $(event.target).text();         // active tab
			var y = $(event.relatedTarget).text();  // previous tab
			$(".act span").text(x);
			$(".prev span").text(y);
		});
	});
</script>