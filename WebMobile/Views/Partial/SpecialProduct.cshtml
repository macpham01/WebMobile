@model IEnumerable<WebMobile.Models.SanPham>

@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="product">
            <div class="image"><a href="~/Public/product.html"><img src="~/Public/images/@item.Image" /></a></div>
            <div class="buttons">
                <a class="btn cart" href="~/Public/#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                <a class="btn wishlist" href="~/Public/#"><span class="glyphicon glyphicon-heart"></span></a>
                <a class="btn compare" href="~/Public/#"><span class="glyphicon glyphicon-transfer"></span></a>
            </div>
            <div class="caption">
                <div class="name"><h3><a href="~/Public/product.html">@item.TenSanPham</a></h3></div>
                <div class="price">$@item.Gia</div>
                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
            </div>
        </div>
    </div>
}
