@model IEnumerable<WebMobile.Models.BinhLuan>

<table class="table" border="1" width="100%" style="border-collapse:collapse">
    <tr>
        <th>
            Tên tài khoản
        </th>
        <th>
           Nội dung
        </th>
       
        <th>
           Ngày
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.TenTaiKhoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoiDung)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Ngay)
        </td>
       
    </tr>
}

</table>
